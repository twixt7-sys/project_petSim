<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>

<VBox xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"

    styleClass="v-box1" fx:id="comps1" alignment="CENTER">
    <VBox styleClass="v-box2" alignment="TOP_CENTER">
        <Label styleClass="div-label" text="Welcome to Pet Simulator!"/>
        <Separator styleClass="divider"/>
    </VBox>
    <VBox styleClass="v-box1">
        <Button styleClass="starting-btn" text="Create New Pet" onAction="#switchToCreatePet"/>
        <Button styleClass="starting-btn" text="Load Previous Pet" onAction="#switchToChooseLoad"/>
    </VBox>
</VBox>
